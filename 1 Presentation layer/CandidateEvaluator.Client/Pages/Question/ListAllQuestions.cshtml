@page "/question"
@using Microsoft.AspNetCore.Blazor.Services
@inject Services.UserIdentityService Http
@inject IUriHelper UriHelper

<div>
    <a href="/question/?categoryid=00000000-0000-0000-0000-000000000000" class="btn">Create new question</a>
</div>

@if (_questionModels != null)
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in _questionModels)
            {
                <tr>
                    <td class="align-middle">@(_questionModels.IndexOf(question)+1)</td>
                    <td class="align-middle">@question.Id</td>
                    <td class="align-middle">@question.Name</td>
                    <td class="align-middle">
                        <a class="col-md-3 btn btn-block btn-success m-1" href="/category/@question.CategoryId/question/@question.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No questions found!</div>

}


@functions
{
private List<Contract.Models.Question> _questionModels;
protected override async Task OnInitAsync()
{
    try
    {
        _questionModels = await Http.AuthorizedGetJsonAsync<List<Contract.Models.Question>>("api/question/");
    }
    catch
    {
        UriHelper.NavigateTo("/");
    }

}
}